# Development Server
VITE_DEV_SERVER_ALLOWED_HOSTS=all

# API Gateway
VITE_API_URL=http://localhost:3030

# Admin/CMS URL (Directus)
# VITE_ADMIN_URL=http://localhost:8099/admin

# Stripe (for client-side checkout)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
VITE_STRIPE_LIFETIME_PROMO_CODE=EARLYSYNTH

# Supabase (if using Supabase Auth)
# VITE_SUPABASE_URL=https://your-project.supabase.co
# VITE_SUPABASE_ANON_KEY=your-anon-key

# ============================================
# Feature Flags (LITE vs PRO)
# ============================================
# SynthStack has two versions:
# - LITE (Community Edition): All features EXCEPT AI Copilot and Referrals
# - PRO (Commercial Edition): All features including AI Copilot and Referrals
#
# For LITE version:  VITE_ENABLE_COPILOT=false, VITE_ENABLE_REFERRALS=false
# For PRO version:   VITE_ENABLE_COPILOT=true,  VITE_ENABLE_REFERRALS=true
# ============================================
VITE_ENABLE_COPILOT=true
VITE_ENABLE_REFERRALS=true

# Other Feature Flags
# VITE_ENABLE_VISUAL_EDITING=true
# VITE_ENABLE_DEMO_MODE=false

# Sentry Error Tracking (Optional)
# Get your DSN from https://sentry.io → Project Settings → Client Keys
# Create a Vue.js project in Sentry for frontend error tracking
# VITE_SENTRY_DSN=https://xxx@o123456.ingest.sentry.io/xxx
# VITE_SENTRY_ENVIRONMENT=development
# VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
