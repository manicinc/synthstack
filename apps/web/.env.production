# Production Environment Variables
# These are used when building for production (quasar build / vite build)

# API Gateway (Production)
VITE_API_URL=https://api.synthstack.app

# Admin/CMS URL (Directus)
VITE_ADMIN_URL=https://admin.synthstack.app

# Stripe (Production keys - set via GitHub secrets/vars)
# VITE_STRIPE_PUBLISHABLE_KEY is set via GitHub vars
VITE_STRIPE_LIFETIME_PROMO_CODE=EARLYSYNTH

# Feature Flags (PRO version)
VITE_ENABLE_COPILOT=true
VITE_ENABLE_REFERRALS=true

# Sentry Error Tracking (Production)
# VITE_SENTRY_DSN is set via GitHub secrets
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
