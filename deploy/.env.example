# ============================================
# SynthStack Production Environment (.env)
# Copy to deploy/.env and fill in values.
# Used by: deploy/docker-compose.yml
# ============================================

# ----------------------------
# Branding / domains (optional)
# ----------------------------
# APP_DOMAIN=yourapp.com
# CONTAINER_PREFIX=yourapp
# GITHUB_ORG=your-github-org

# ----------------------------
# Database (local Postgres container)
# ----------------------------
POSTGRES_USER=synthstack
POSTGRES_PASSWORD=change-me

# API Gateway expects a Postgres URL (the hostname `postgres` comes from docker-compose)
DATABASE_URL=postgresql://synthstack:change-me@postgres:5432/synthstack

# ----------------------------
# Auth / Security
# ----------------------------
JWT_SECRET=change-me-min-32-chars

# ----------------------------
# Directus (CMS)
# ----------------------------
DIRECTUS_KEY=change-me
DIRECTUS_SECRET=change-me
DIRECTUS_ADMIN_EMAIL=admin@yourdomain.com
DIRECTUS_ADMIN_PASSWORD=change-me
DIRECTUS_ADMIN_TOKEN=change-me

# ----------------------------
# Supabase (optional)
# ----------------------------
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ----------------------------
# Stripe (optional)
# ----------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ----------------------------
# AI Providers (optional)
# ----------------------------
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ----------------------------
# Email (Resend)
# ----------------------------
RESEND_API_KEY=
RESEND_FROM_EMAIL=
RESEND_FROM_NAME=

# ----------------------------
# GitHub (required for private GHCR pulls + org access features)
# ----------------------------
GH_PAT=ghp_xxx
GITHUB_ORG_PAT=
GITHUB_ORG_NAME=manicinc
GITHUB_TEAM_SLUG=synthstack-pro

# ----------------------------
# Uploads (Cloudflare R2, optional)
# ----------------------------
CLOUDFLARE_R2_ACCESS_KEY=
CLOUDFLARE_R2_SECRET_KEY=
CLOUDFLARE_R2_BUCKET=

# ----------------------------
# Giscus Comments (optional)
# ----------------------------
# GitHub Discussions-powered comments for blog posts
# Configure at: https://giscus.app
VITE_GISCUS_REPO=
VITE_GISCUS_REPO_ID=R_kgDOQ6tKzg
VITE_GISCUS_CATEGORY=Community Blog
VITE_GISCUS_CATEGORY_ID=
VITE_GISCUS_MAPPING=pathname
VITE_GISCUS_LANG=en

